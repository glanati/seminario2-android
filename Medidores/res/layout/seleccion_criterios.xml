        <TextView
            android:id="@+id/tv_ruta_med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:layout_marginTop="30dp"
            android:text="@string/ingrese_ruta_med"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_ingreso_lecturas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/radioGroup_criterio"
            android:layout_marginBottom="43dp"
            android:background="#0101DF"
            android:onClick="ingresolecturas"
            android:text="@string/ingreso_lecturas"
            android:textColor="#FFFFFF" />

        <RadioGroup
            android:id="@+id/radioGroup_criterio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <RadioButton
                android:id="@+id/radio_asc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="22dp"
                android:text="@string/ascendente"
                android:textColor="#FFFFFF" />

            <RadioButton
                android:id="@+id/radio_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/descendente"
                android:textColor="#FFFFFF" />
        </RadioGroup>

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_ruta_med"
            android:background="#FFFFFF" />



</RelativeLayout>